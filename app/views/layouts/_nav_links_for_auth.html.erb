<li>
	<div class="dropdown">
		<button class="btn btn-lg btn-default dropdown-toggle" type="button" id="nav-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
			<div id="dropdown-avatar" class="col-md-3">
				<%= image_tag "/default_user.png", :class => "img-circle"%>
			</div>
			<div id="dropdown-name" class="col-md-5">
				Kachina 
			</div>
			<div class="col-md-2">
				<span class="nav-icon glyphicon glyphicon-menu-down" aria-hidden="true"></span>
			</div>
		</button>
		<ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
			<% if user_signed_in? %>
			<li><%= link_to 'Edit account', edit_user_registration_path %></li>
			<li role="separator" class="divider"></li>
			<li><%= link_to 'Sign out', destroy_user_session_path, :method=>'delete' %></li>
			<% end %>			
		</ul>
	</div>
